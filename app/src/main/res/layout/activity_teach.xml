<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teach">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pytanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/pierwszy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pytanie"
                android:layout_marginTop="0dp"
                android:checked="false"
                android:text="CheckBox"
                android:textSize="15dp" />

    <CheckBox
        android:id="@+id/drugi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="0dp"
        android:layout_below="@id/pierwszy"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/trzeci"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/drugi"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/czwarty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_below="@id/trzeci"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/piaty"
        android:layout_below="@id/czwarty"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/szosty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_below="@id/piaty"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/siodmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_below="@id/szosty"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/osmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_below="@id/siodmy"
        android:text="CheckBox" />
    <CheckBox
        android:id="@+id/dziewiaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textSize="15dp"
        android:layout_below="@id/osmy"
        android:text="CheckBox" />


            <ImageButton
                android:id="@+id/imageButton"
                style="@style/Widget.Design.AppBarLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/dziewiaty"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/check"
                android:layout_marginLeft="20dp"
                app:srcCompat="@android:drawable/ic_media_ff" />

    <TextView
        android:id="@+id/wynik"
        android:layout_below="@id/imageButton"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="TextView" />

            <Button
                android:id="@+id/check"
                style="@style/Widget.Design.AppBarLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/dziewiaty"
                android:layout_centerHorizontal="true"
                android:text="@string/check" />

            <ImageButton
                android:id="@+id/back"
                style="@style/Widget.Design.AppBarLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/dziewiaty"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/check"
                app:srcCompat="@android:drawable/ic_media_rew" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>