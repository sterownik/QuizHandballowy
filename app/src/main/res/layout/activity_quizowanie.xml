<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizowanie" >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/czas"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:outlineAmbientShadowColor="@android:color/holo_red_dark"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pytanie"
        android:layout_below="@id/czas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView" />

    <CheckBox
        android:id="@+id/pierwszy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pytanie"
        android:padding="16dp"
        android:textSize="15dp"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/drugi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:layout_below="@id/pierwszy"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/trzeci"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/drugi"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/czwarty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:layout_below="@id/trzeci"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/piaty"
        android:layout_below="@id/czwarty"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"

        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/szosty"
        android:layout_width="wrap_content"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@id/piaty"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/siodmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:layout_below="@id/szosty"
        android:text="CheckBox" />

    <CheckBox
        android:id="@+id/osmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:layout_below="@id/siodmy"
        android:text="CheckBox" />
    <CheckBox
        android:id="@+id/dziewiaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"

        android:textSize="15dp"
        android:layout_below="@id/osmy"
        android:text="CheckBox" />






        </RelativeLayout>
    </ScrollView>











</RelativeLayout>